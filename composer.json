{
    "name": "chiheb/simplex-framework",
    "description": "A lightweight, modern PHP MVC framework with elegant database handling",
    "type": "project",
    "keywords": [
        "framework",
        "mvc",
        "php8",
        "simplex"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Chiheb Nabil",
            "email": "chiheb.design@gmail.com",
            "homepage": "https://mydevmentor.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "cakephp/orm": "^4.0",
        "symfony/dotenv": "^6.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "format": "php-cs-fixer fix --allow-risky=yes",
        "lint": "phpcs",
        "analyze": "phpstan analyze",
        "check": [
            "@format",
            "@lint",
            "@analyze"
        ]
    },
    "minimum-stability": "stable"
}
